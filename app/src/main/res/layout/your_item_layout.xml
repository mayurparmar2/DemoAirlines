<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Airlines name"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textAlignment="center"
        android:textSize="12sp"

        app:layout_constraintTop_toBottomOf="@id/title"
        android:textColor="@color/white"


        android:layout_margin="10dp"
        android:background="@drawable/drow_blue"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/id" />

    <TextView
        android:id="@+id/id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:background="@drawable/drow_light_blue"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/id_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:background="@drawable/drow_blue"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/id"
        android:textColor="@color/white"


        android:layout_margin="10dp"
        android:textAlignment="center"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/name" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:background="@drawable/drow_light_blue"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/name_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/id" />

    <TextView
        android:id="@+id/trips_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Trips"
        android:textAlignment="center"
        android:textSize="12sp"

        app:layout_constraintTop_toBottomOf="@id/name"
        android:textColor="@color/white"


        android:layout_margin="10dp"
        android:background="@drawable/drow_blue"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trips" />

    <TextView
        android:id="@+id/trips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="12sp"
        android:background="@drawable/drow_light_blue"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/trips_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="@drawable/drow_blue"
        app:layout_constraintTop_toBottomOf="@id/trips_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/slogon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="slogon"
        android:textAlignment="center"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/country_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Country"
        android:textAlignment="center"
        android:textSize="12sp"
        android:background="@drawable/drow_blue"
        app:layout_constraintTop_toBottomOf="@id/slogon"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/country" />

    <TextView
        android:id="@+id/country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="12sp"
        android:background="@drawable/drow_light_blue"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/country_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/slogon" />

    <TextView
        android:id="@+id/head_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Head_quaters"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/country_label"
        android:textColor="@color/white"
        android:background="@drawable/drow_blue"

        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/head" />

    <TextView
        android:id="@+id/head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="12sp"
        android:background="@drawable/drow_light_blue"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/head_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/country" />

    <TextView
        android:id="@+id/website_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/head_label"
        android:textColor="@color/white"

        android:background="@drawable/drow_blue"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/website" />

    <TextView
        android:id="@+id/website"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="12sp"
        android:background="@drawable/drow_light_blue"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/website_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/head" />

</androidx.constraintlayout.widget.ConstraintLayout>
